{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
  
        <div class="container-fluid">
            <div class="row cont-top-collection px-3 ">
                <div class="col-12 align-items-start d-flex ">
                    <a href=" {{ path('product_index')}} " class=" text-decoration-none ">
                        <div
                            class="cont-retour-achat d-flex align-items-center justify-content-center px-2">
                            <i class="fas fa-caret-left mr-1 "></i>
                            <span class="py-2 font-weight-bold ">Retours Ã  la collection</span>
                        </div>
                    </a>
                </div>
                <div class="col-12 text-center mb-4 mt-2 py-2">
                    <h2 class="text-uppercase titre-collection mb-3"> {{category.name}} </h2>
                    <p> {{category.description}}</p>
                </div>
            </div>
        </div>


        <div class="container-fluid">

            <div class="row">
                

                <div class="col-12 d-flex justify-content-center align-items-center body-collection mb-5">
                    <div class="container-collection">


                        {% for product in products %}
                            
                        
                            <!-- Debut carte -->
                            <div class="card-collection">
                                <a href=" {{path('product_show',{'slug': product.slug })}} ">

                                    <div class="img-box">
                                        <img src="/assets/ressources/img/uploads/products/{{product.image}}" alt="{{product.name}}">
                                        <ul class="action">
                                        
                                            <li>
                                            <a href=" {{ path('product_show',{'slug': product.slug })}}" class="text-dark">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                                <span>View Details</span>
                                            </a>
                                            </li>
                                            
                                        </ul>
                                    </div>
                                    <div class="content-card-collection">
                                        <div class="product-name-collection">
                                            <h3> {{product.subtitle}} </h3>
                                        </div>
                                        <div class="price-rating">
                                            <h2> {{product.price | amount}} </h2>
                                        
                                            {# <div class="rating">
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa fa-star" aria-hidden="true"></i>
                                                <i class="fa grey fa-star" aria-hidden="true"></i>
                                            </div> #}

                                        </div>
                                    </div>
                                </a>
                            </div>
                            <!-- Fin Carte -->

                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
   

{% endblock %}
