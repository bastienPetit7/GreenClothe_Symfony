{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <section>

        <div class="container-fluid d-flex justify-content-center mt-3 py-2">
            <div class="row">
                <div class="col-12 text-center titre-register">
                    <h2>Cr√©er un compte</h2>
                </div>
            </div>
        </div>
        <div class="container-fluid d-flex justify-content-center">
            <div class="row register-body  mt-2 mb-5 ">
                <div class="col-12 register-container p-4  ">

                    <h3 class=" h4  py-4 perso_blue-green"> Sign Up today</h3>

                    <div class="register-form-container perso_blue-green">
                    
                        {{ form_start(registrationForm) }}

                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.telephone) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        

                        <button type="submit" class="btn">S'inscrire</button>
                        {{ form_end(registrationForm) }}
                    
                    </div>
                  

                </div>
            </div>
        </div>

    </section>


    <div class="container-fluid mb-5 ">
        <div class="row mt-4 mb-4 ">
            <div class="col-sm-3 p-0 d-flex justify-content-end mr-1 mb-5">
                <a href="collection.htm" class=" text-decoration-none ">
                    <div
                        class="cont-retour-achat d-flex align-items-center justify-content-center px-2">
                        <i class="fas fa-caret-left mr-1 "></i>
                        <span class="py-2 font-weight-bold ">Continuer mes achats</span>
                    </div>
                </a>
            </div>
        </div>
    </div>



{% endblock %}
